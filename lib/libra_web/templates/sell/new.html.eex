<%= render("book.html", book: @book) %>
<%= form_for @listing_changeset, Routes.sell_path(@conn, :create), fn f -> %>

    <label>
        Description: <%= text_input f, :description%>
    </label>

    <label>
        Price: <%= text_input f, :price %>
    </label>

    <%= hidden_input :listing, :book_id, value: @book_id %>

    <%= submit "Submit" %>
<% end %>
